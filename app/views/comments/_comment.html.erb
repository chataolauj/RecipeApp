<div class="show-text-formatting">
    <p><strong><%= comment.name %></strong></p>
    <p><%= comment.comment %></p>
    
    <% if comment.user == current_user %>
        <%= link_to 'Delete', [comment.recipe, comment], method: :delete, data: { confirm: 'Are you sure want to delete this comment?' } %>
    <% end %>
</div>