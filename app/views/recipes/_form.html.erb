<%= form_for @recipe do |f| %>
    <div class="col-xs-12 col-md-8">
        <%= image_tag @recipe.image.thumb('770x200').url if @recipe.image_stored? %>
        <br>
        <br>
        <%= f.file_field :image %>
    </div>
    <div class="col-xs-6 col-md-4">
        <p><%= f.label :author, 'Author' %> <%= f.text_field :author %></p>
        <p><%= f.label :servings, 'Serves' %> <%= f.text_field :servings %><p>
        <p><%= f.label :prep_time, 'Prep Time (minutes):' %> <%= f.text_field :prep_time %></p>
        <p><%= f.label :cook_time, 'Cook Time (minutes):' %> <%= f.text_field :cook_time %></p>
    </div>
    <p><%= f.label :recipe_name, 'Recipe Name' %> <br> <%= f.text_field :recipe_name %></p>
    <p><%= f.label :description, 'Description' %> <br> <%= f.text_area :description %></p>
    <p><%= f.label :ingredients, 'Ingredients' %> <br> <%= f.text_area :ingredients, placeholder: 'Put each ingredient on its own line.' %></p>
    <p><%= f.label :directions, 'Directions' %> <br> <%= f.text_area :directions, placeholder: 'Put each step on its own line.' %></p>
    <div class="text-center">
        <p><%= f.submit 'Submit', :class => "btn btn-primary" %></p>
        <%= link_to 'Cancel', @recipe, data: {confirm: 'Are you sure?' }, :class => "btn btn-danger" %> <!-- goes back to recipe object's view -->
    </div>
<% end %>